{
	"name": "mandelbrot",
	"private": true,
	"version": "1.0.0",
	"workspaces": [
		"packages/*"
	],
	"lint-staged": {
		"*.{ts|tsx}": "biome format --write && eslint"
	},
	"type": "module",
	"scripts": {
		"dev": "vite --config ./packages/client/vite.config.ts",
		"build:vite": "vite build --config ./packages/client/vite.config.ts",
		"build:zig": "npm -w @mandelbrot/zig run build",
		"build": "npm run build:zig && npm run build:vite",
		"check": "tsc -b --noEmit",
		"lint": "eslint .",
		"all": "npm run format && npm run lint && npm run check && npm run build",
		"format": "biome format ./packages/",
		"preview": "vite preview --config ./packages/client/vite.config.ts",
		"prepare": "husky"
	},
	"dependencies": {
		"jotai": "^2.14.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@eslint/js": "^9.33.0",
		"@types/node": "^24.6.2",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"chokidar": "^4.0.3",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2"
	}
}
